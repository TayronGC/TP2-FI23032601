    @Html.Raw(ViewData["Gamma"]); *@
    </div>
</div>

<div class="card mt-3">
    <div class="card-header">
        <h5 class="card-title">Formulario de Cálculo</h5>
    </div>
<div class="card-body">
<form asp-controller="Triangulo" asp-action="Calcular" method="post">
    <div class="mb-3">
        <label asp-for="a" class="form-label"></label>
        <input type="number" class="form-control" asp-for="a" required />
        <span asp-validation-for="a" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="b" class="form-label"></label>
        <input type="number" class="form-control" asp-for="b" required />
        <span asp-validation-for="b" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="c" class="form-label"></label>
        <input type="number" class="form-control" asp-for="c" required />
        <span asp-validation-for="c" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Calcular</button>
</form>
</div>
</div>
