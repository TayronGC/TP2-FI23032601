@model TareaProgramada2.Models.TrianguloModel
@{
    ViewData["Title"] = "Triangulo Page";
}

<h2>Triangulo Page</h2>

<div class="card">
    <div class="card-header">
        <h5 class="card-title">Resultados / Errores</h5>
    </div>
    <div class="card-body">
    @if(ViewData["ErrorMessage"] != null)
    {
        <strong>Error: @ViewData["ErrorMessage"]</strong><br/>
    }
    @if (Model != null && Model.Perimetro > 0 && Model.Semiperimetro > 0 && Model.Area > 0)
    {
        @* <strong>Resultados:</strong><br/>
        @ViewData["Perimetro"] <br/>
        @ViewData["Semiperimetro"] <br/>
        @Html.Raw(ViewData["Area"]) <br/>
        @Html.Raw(ViewData["TipoTriangulo"]) <br/>
        @Html.Raw(ViewData["Alfa"]); <br/>
        @Html.Raw(ViewData["Beta"]); <br/>
        @Html.Raw(ViewData["Gamma"]);<br/>

<br/> *@
        <span><strong>P:</strong> @Model?.Perimetro <strong>u</strong></span><br/>
        <span><strong>S:</strong> @Model?.Semiperimetro <strong>u</strong></span><br/>
        <span><strong>A:</strong> @Model?.Area.ToString("F2") <strong>u²</strong></span><br/>
        <span><strong>Tipo:</strong> @Model?.TipoTriangulo</span><br/>
        <span><strong>α</strong> ≈ @Model?.Alfa.ToString("F2")°</span><br/>
        <span><strong>β</strong> ≈ @Model?.Beta.ToString("F2")°</span><br/>
        <span><strong>ɣ</strong> ≈ @Model?.Gamma.ToString("F2")°</span><br/>

    }
    @* @Html.Raw(ViewData["ErrorMessage"]) <br/>
    @Html.Raw(ViewData["Perimetro"]) <br/>
    @Html.Raw(ViewData["Semiperimetro"]) <br/>
    @Html.Raw(ViewData["Area"]) <br/>
    @Html.Raw(ViewData["TipoTriangulo"]) <br/>
    @Html.Raw(ViewData["Alfa"]); <br/>
